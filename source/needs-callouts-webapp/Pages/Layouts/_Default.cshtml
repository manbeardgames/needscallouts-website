<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="@(ViewBag.Meta.Description ?? "The official website of the Needs Callouts Free Company")" />
    <meta name="author" content="@(ViewBag.Meta.Author ?? "Christopher Whitley")" />

    <!-- Open Graph -->
    <meta property="og:local" content="en-US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@(ViewBag.Meta.Title ?? "Needs Callouts Free Company")" />
    <meta property="og:description" content="@(ViewBag.Meta.Description ?? "The official website of the Needs Callouts Free Company")" />
    <meta property="og:url" content="@Context.Request.Path" />
    <meta property="og:site_name" content="Needs Callouts Free Company" />
    <meta property="og:image" content="@ViewBag.Meta.OGImage" />

    <title>@(ViewBag.Meta.Title ?? "Needs Callouts Free Company")</title>
    <partial name="_GoogleAnalytics" />
    <environment include="Development">
        <link rel="stylesheet" href="~/dist/css/vendor.css" />
        <link rel="stylesheet" href="~/dist/css/site.css" />
    </environment>
    <environment include="Production">
        <link rel="stylesheet" href="~/dist/css/vendor.min.css" />
        <link rel="stylesheet" href="~/dist/css/site.min.css" />
    </environment>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark" aria-label="Navigation Bar">
        <div class="container-fluid">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Needs Callouts Free Company</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBar"
                aria-controls="navBar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navBar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="About"
                            class="nav-link @(ViewBag.Action == "About" ? "active" : "")"
                            aria-current="@(ViewBag.Action == "About" ? "page" : "false")">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Join"
                            class="nav-link @(ViewBag.Action == "Join" ? "active" : "")"
                            aria-current="@(ViewBag.Action == "Join" ? "page" : "false")">Join Us</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Ranks"
                            class="nav-link @(ViewBag.Action == "Ranks" ? "active" : "")"
                            aria-current="@(ViewBag.Action == "Ranks" ? "page" : "false")">Member Ranks</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Rules"
                            class="nav-link @(ViewBag.Action == "Rules" ? "active" : "")"
                            aria-current="@(ViewBag.Action == "Rules" ? "page" : "false")">Rules & Guidelines</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                            href="https://na.finalfantasyxiv.com/lodestone/freecompany/9233645873504835379/">
                            Lodestone Page
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="pb-2 pt-5 bg-dark">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3">
                    <a class="d-inline-flex align-items-center mb-2 link-dark text-decoration-none" href="/"
                        aria-label="Needs Callouts">
                        <img class="img-fluid" width="50" src="~/images/spriggan.png" alt="Spriggan">
                        <span class="fs-5 text-light">It's Just Like Normal Mode</span>
                    </a>
                    <ul class="list-unstyled small text-muted">
                        <li class="mb-2">
                            Designed with ❤️ by Christopher Whitley
                        </li>
                    </ul>
                </div>
                <div class="col-lg-8 offset-lg-1 text-muted">
                    <p class="text-centered">
                        FINAL FANTASY is a registered trademark of Square Enix Holdings Co., Ltd.
                        © SQUARE ENIX CO., LTD. All Rights Reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <environment include="Staging,Development">
        <script src="~/dist/js/vendor.js"></script>
    </environment>
    <environment include="Production">
        <script src="~/dist/js/vendor.min.js"></script>
    </environment>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
